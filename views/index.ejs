<%-include('./partials/headNav')%>

<section id="all-movies" 
data-sal="slide-up"
  data-sal-delay="300"
  data-sal-easing="ease-out-back">
    <% data.forEach(elt => { %>
    <article>
        <a href="/details/<%= elt.id %>"><img src="https://image.tmdb.org/t/p/w500/<%= elt.poster_path %>" alt=""></a>
        <a class="title-link" href="/details/<%= elt.id %>"> <%= elt.title %> </a>
    </article>
    <% }) %>
</section>

<!-- pagination -->
<footer>
    <% if(pageNumber <= 8){ %>
        <% for (let index=1; index <= 15 ; index++) { %>
        <div>
            <a class="btn-page" href="/page/<%= index %>"><%= index %></a>
        </div>
        <% }%>
    <% } else { %>
        <% if (pageNumber >= 493) { %>
            <% pageNumber = 493 %>
        <% } %>
        <% let start = (pageNumber*1) - 7; %>
        <% let end = (pageNumber*1) + 7; %>
        <% for (let index = start; index <= end; index++) { %>
            <div>
                <a class="btn-page" href="/page/<%= index %>"><%= index %></a>
            </div>
        <% } %>
    <% } %>
</footer>



</body>

</html>